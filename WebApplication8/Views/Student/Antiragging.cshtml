    <style>
        :root {
            --primary-color: #1a3c6e;
            --secondary-color: #f5f7fa;
            --accent-color: #e74c3c;
            --text-color: #333;
            --border-radius: 8px;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Roboto', Arial, sans-serif;
            margin: 0 auto;
            max-width: 900px;
            padding: 40px 20px;
            line-height: 1.8;
            color: var(--text-color);
            background-color: var(--secondary-color);
        }

        h1 {
            text-align: center;
            font-size: 32px;
            color: var(--primary-color);
            margin-bottom: 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        h2 {
            text-align: center;
            font-size: 24px;
            color: var(--primary-color);
            margin: 15px 0;
        }

        h3 {
            font-size: 20px;
            color: var(--primary-color);
            margin: 25px 0 15px;
            border-left: 4px solid var(--accent-color);
            padding-left: 15px;
        }

        strong {
            font-weight: 700;
            color: var(--primary-color);
        }

        p {
            margin: 15px 0;
            font-size: 16px;
        }

        ul {
            list-style-type: none;
            padding-left: 20px;
            margin: 15px 0;
        }

        ul li {
            position: relative;
            margin: 12px 0;
            padding-left: 30px;
            font-size: 16px;
        }

        ul li::before {
            content: "•";
            position: absolute;
            left: 0;
            color: var(--accent-color);
            font-size: 24px;
            line-height: 1;
        }

        a {
            color: var(--primary-color);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        a:hover {
            color: var(--accent-color);
            text-decoration: underline;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
            background-color: #fff;
            padding: 20px;
            border-radius: var(--border-radius);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .header img {
            max-width: 100%;
            height: auto;
            margin: 15px 0;
            border-radius: var(--border-radius);
            border: 1px solid #ddd;
        }

        .image-root {
            display: block;
            margin: 0 auto 30px;
            max-width: 200px;
            border-radius: var(--border-radius);
        }

        .note {
            background-color: #fff;
            padding: 20px;
            margin: 20px 0;
            border-radius: var(--border-radius);
            border-left: 5px solid var(--accent-color);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .signature {
            margin-top: 30px;
            text-align: right;
            font-style: italic;
            color: var(--primary-color);
        }

        @@media (max-width: 600px) {
            body {
                padding: 20px 15px;
            }

            h1 {
                font-size: 24px;
            }

            h2 {
                font-size: 20px;
            }

            h3 {
                font-size: 18px;
            }

            .header {
                padding: 15px;
            }

            .header img {
                margin: 10px 0;
            }
        }
    </style>
