@model WebApplication8.Models.Undertakingbyparent
@{
    Layout = null;
    ViewBag.Title = "Undertaking Form - University Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        @@page {
            size: A4;
            margin: 20mm;
        }

        body {
            font-family: 'Times New Roman', Times, serif;
            margin: 0 auto;
            color: #000;
            line-height: 1.5;
            font-size: 12pt;
            width: 170mm;
            height: 257mm;
            box-sizing: border-box;
            text-align: center;
        }

        .container {
            width: 100%;
            margin: 0 auto;
            margin-top: 30mm; /* Adjusted to move the heading upward */
            text-align: center;
            padding: 20px;
        }

        .title-section {
            margin-bottom: 30px;
        }

            .title-section h3 {
                font-size: 14pt;
                font-weight: bold;
                text-transform: uppercase;
                margin: 5px 0;
            }

            .title-section small {
                font-size: 10pt;
                text-transform: uppercase;
            }

        p {
            font-size: 12pt;
            text-align: justify;
            margin: 15px 0;
        }

        .blank-line {
            border-bottom: 1px solid #000;
            display: inline-block;
            vertical-align: bottom;
            width: 180px;
            margin: 0 5px;
            position: relative;
        }

        .blank-line-short {
            border-bottom: 1px solid #000;
            display: inline-block;
            vertical-align: bottom;
            width: 120px;
            margin: 0 5px;
            position: relative;
        }

        .blank-line-enroll {
            border-bottom: 1px solid #000;
            display: inline-block;
            vertical-align: bottom;
            width: 100px;
            margin: 0 5px;
            position: relative;
        }

        .prefilled-text {
            position: absolute;
            bottom: 2px;
            left: 0;
            font-size: 12pt;
            color: #000;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 100%;
        }

        .signature-section {
            display: flex;
            justify-content: space-between;
            margin-top: 40px;
            text-align: left;
            width: 100%;
        }

            .signature-section div {
                flex: 1;
            }

            .signature-section p {
                margin: 8px 0;
                font-size: 12pt;
                text-align: left;
            }

        .footer {
            margin-top: 30px;
            text-align: left;
            font-size: 12pt;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="title-section">
            <h3>Undertaking by Parent/Guardian</h3>
            <small>Annexure V (D)</small>
        </div>

        <p>
            I
            <span class="blank-line">
                <span class="prefilled-text">@Model.ParentName</span>
            </span>
            (Mother/Father/Guardian) of Mr./Ms.
            <span class="blank-line-short">
                <span class="prefilled-text">@Model.StudentName</span>
            </span>,
            <br>
            Enrolment No.
            <span class="blank-line-enroll">
                <span class="prefilled-text">@Model.EnrollmentNo</span>
            </span>,
            <br>
            hereby understand that my ward shall be liable for expulsion forthwith from the IFHE in case of being found involved in or committing any offence cognizable and punishable under the Narcotic Drugs and Psychotropic Substances Act, 1985 or for any other criminal offence punishable under any law in force.
        </p>

        <div class="signature-section">
            <div>
                <p>
                    Place:
                    <span class="blank-line">
                        <span class="prefilled-text">@Model.Place</span>
                    </span>
                </p>
                <p>
                    Date:
                    <span class="blank-line">
                        <span class="prefilled-text">@Model.Date.ToString("yyyy-MM-dd")</span>
                    </span>
                </p>
            </div>
            <div style="text-align: right;">
                <p>Signature of Mother/Father/Guardian</p>
                <span class="blank-line">
                    <span class="prefilled-text">@Model.Signature</span>
                </span>
            </div>
        </div>

        <div class="footer">
            <p>To,</p>
            <p>The Dean/Director</p>
        </div>
    </div>
</body>
</html>
