@model WebApplication8.Models.mba_student_data
@{
    ViewBag.Title = "MBA Student Personal Data Form";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        @@page {
            size: A4;
            margin: 15mm;
        }

        body {
            font-family: 'Times New Roman', Times, serif;
            margin: 0 auto;
            color: #000;
            line-height: 1.3;
            font-size: 11pt;
            width: 180mm;
            height: 297mm;
            box-sizing: border-box;
            text-align: center; /* Ensure overall centering */
        }

        .header {
            text-align: center;
            margin-bottom: 15px;
            width: 100%;
        }

            .header img {
                display: block;
                margin: 0 auto;
                width: 80px;
            }

            .header p {
                margin: 3px 0;
                font-size: 9pt;
            }

            .header h2 {
                font-size: 14pt;
                font-weight: bold;
                text-transform: uppercase;
                margin: 8px 0;
            }

            .header h3 {
                font-size: 10pt;
                font-weight: normal;
                text-transform: uppercase;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 0 auto 15px auto; /* Explicitly center the table */
            display: table; /* Ensure table behaves as a table for centering */
        }

        th, td {
            border: 1px solid #000;
            padding: 6px;
            text-align: left;
            font-size: 11pt;
            word-wrap: break-word;
        }

        th {
            font-weight: bold;
            text-transform: uppercase;
            width: 40%;
        }

        td {
            width: 60%;
        }

        .checkbox-group {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

            .checkbox-group label {
                display: flex;
                align-items: center;
                gap: 5px;
                font-size: 11pt;
            }

        input[type="checkbox"] {
            width: 12px;
            height: 12px;
        }

        .instructions {
            margin-top: 15px;
            margin-left: auto;
            margin-right: auto;
            font-size: 11pt;
            width: 100%;
            display: block;
            text-align: left; /* Keep instructions text left-aligned for readability */
        }

            .instructions ul {
                padding-left: 15px;
                list-style-type: disc;
            }

            .instructions li {
                margin-bottom: 4px;
            }
    </style>
</head>
<body>
    <div class="header">
        <p>IFHE, Hyderabad</p>
        <p>(Deemed to be University under Section 3 of the UGC Act, 1956)</p>
        <p>Dontanapalli, Shankerpalli Road, Hyderabad-501203, Telangana</p>
        <h2>MBA Student Personal Data Form</h2>
        <h3>(To be filled in capital letters only)</h3>
    </div>

    <table>
        <tr>
            <th>Student Name (as per 10th grade sheet)</th>
            <td>
                @Model.Student_Name__as_per_10th_grade_sheet_
            </td>
        </tr>
        <tr>
            <th>Date of Birth</th>
            <td>@(Model.date_of_birth.HasValue ? Model.date_of_birth.Value.ToString("dd-MM-yyyy") : "")</td>
        </tr>
        <tr>
            <th>Enrollment No</th>
            <td>@Model.enrollment_no</td>
        </tr>
        <tr>
            <th>Mobile No</th>
            <td>@Model.mobile_no</td>
        </tr>
        <tr>
            <th>Email ID</th>
            <td>@Model.email_id</td>
        </tr>
        <tr>
            <th>Blood Group</th>
            <td>@Model.blood_group</td>
        </tr>
        <tr>
            <th>Nationality / Religion</th>
            <td>@Model.nationality / @Model.religion</td>
        </tr>
        <tr>
            <th>Father's Name</th>
            <td>@Model.father_name</td>
        </tr>
        <tr>
            <th>Father's Mobile No</th>
            <td>@Model.father_mobile_no</td>
        </tr>
        <tr>
            <th>Father's Email ID</th>
            <td>@Model.father_email_id</td>
        </tr>
        <tr>
            <th>Mother's Name</th>
            <td>@Model.mother_name</td>
        </tr>
        <tr>
            <th>Mother's Mobile No</th>
            <td>@Model.mother_mobile_no</td>
        </tr>
        <tr>
            <th>Mother's Email ID</th>
            <td>@Model.mother_email_id</td>
        </tr>
        <tr>
            <th>Address for Communication</th>
            <td>@Model.address_for_communication</td>
        </tr>
        <tr>
            <th>Local Guardian's Name, Mobile, Email ID and Address</th>
            <td>@Model.local_guardian_name, @Model.local_guardian_mobile, @Model.local_guardian_email_id, @Model.local_guardian_address</td>
        </tr>
        <tr>
            <th>Parents Income Category</th>
            <td>
                <div class="checkbox-group">
                    <label><input type="checkbox" disabled @(Model.parents_income_category == "Below 5 Lacs" ? "checked" : "") /> Below 5 Lacs</label>
                    <label><input type="checkbox" disabled @(Model.parents_income_category == "Below 8 Lacs" ? "checked" : "") /> Below 8 Lacs</label>
                    <label><input type="checkbox" disabled @(Model.parents_income_category == "Below 10 Lacs" ? "checked" : "") /> Below 10 Lacs</label>
                    <label><input type="checkbox" disabled @(Model.parents_income_category == "Above 10 Lacs" ? "checked" : "") /> Above 10 Lacs</label>
                </div>
            </td>
        </tr>
        <tr>
            <th>Work Experience if any</th>
            <td>
                <div class="checkbox-group">
                    <label><input type="checkbox" disabled @(Model.work_experience == "1 year" ? "checked" : "") /> 1 year</label>
                    <label><input type="checkbox" disabled @(Model.work_experience == "2 years" ? "checked" : "") /> 2 years</label>
                    <label><input type="checkbox" disabled @(Model.work_experience == "3 years" ? "checked" : "") /> 3 years</label>
                    <label><input type="checkbox" disabled @(Model.work_experience == "5 years" ? "checked" : "") /> 5 years</label>
                </div>
            </td>
        </tr>
    </table>

    <div class="instructions">
        <strong>Instructions:</strong>
        <ul>
            <li>Hard copy of the duly filled Personal Data Form is required to be submitted at the time of Registration, failing which Registration will not be allowed. Also, please note all the fields in the form are mandatory.</li>
        </ul>
    </div>
</body>
</html>
