@model WebApplication8.Models.undertakingbyparV_C_
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Undertaking Form</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', 'Arial', sans-serif;
            background: linear-gradient(135deg, #e0f2ff 0%, #f4f7fb 100%);
            margin: 0;
            padding: 20px;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            animation: fadeIn 0.8s ease-in-out;
        }

        .form-container {
            width: 85%;
            margin: 20px auto;
            background: linear-gradient(145deg, #ffffff, #f0f4ff);
            padding: 2rem;
            border: 1px solid #e2e8f0;
            border-radius: 1rem;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .annexure {
            text-align: right;
            font-size: 14px;
            font-weight: 600;
            color: #6b7280;
            margin-bottom: 10px;
        }

        h1 {
            text-align: center;
            font-size: 24px;
            text-transform: uppercase;
            margin-bottom: 20px;
            font-weight: 700;
            color: #004aad;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.05);
        }

        h2 {
            font-size: 18px;
            text-align: center;
            text-decoration: underline;
            margin: 20px 0;
            font-weight: 600;
            color: #004aad;
            padding-top: 0;
        }

        h3 {
            font-size: 16px;
            margin: 20px 0 10px;
            color: #1f2937;
            font-weight: 600;
        }

        p {
            font-size: 14px;
            line-height: 1.8;
            margin-bottom: 20px;
            color: #4b5563;
        }

        .blank-line {
            border-bottom: 1px solid #000000;
            height: 1.5rem;
            display: inline-block;
            vertical-align: bottom;
            width: 100px;
            margin: 0 5px;
            position: relative;
        }

        .blank-line-long {
            border-bottom: 1px solid #000000;
            height: 1.5rem;
            display: inline-block;
            vertical-align: bottom;
            width: 250px;
            margin: 0 5px;
            position: relative;
        }

        .blank-line-textarea {
            border-bottom: 1px solid #000000;
            height: 50px;
            display: inline-block;
            vertical-align: top;
            width: 70%;
            margin: 0 5px;
            position: relative;
        }

        .prefilled-text {
            position: absolute;
            bottom: 2px;
            left: 0;
            font-size: 14px;
            color: #000000;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 100%;
        }

        .guardian-details {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            gap: 20px;
        }

        .guardian-info, .parent-details {
            width: 70%;
        }

        .guardian-info .form-row,
        .parent-details .form-row {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .guardian-info label,
        .parent-details label {
            font-size: 14px;
            width: 200px;
            margin-right: 10px;
            color: #1f2937;
            font-weight: 500;
        }

        .photo-boxes {
            width: 25%;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .photo-row {
            display: flex;
            gap: 15px;
        }

        .photo-box {
            border: 1px solid #4b5563;
            height: 150px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            font-size: 12px;
            padding: 5px;
            background: #f9fafb;
            border-radius: 5px;
            color: #6b7280;
            flex: 1;
        }

        .photo-box-local-guardian {
            border: 1px solid #4b5563;
            height: 168px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            font-size: 12px;
            padding: 5px;
            background: #f9fafb;
            border-radius: 5px;
            color: #6b7280;
            width: 54%;
        }

        ul {
            font-size: 14px;
            margin: 0;
            padding-left: 20px;
            color: #4b5563;
            list-style-type: disc; /* Changed to dotted bullets */
        }

        li {
            margin-bottom: 10px;
            
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 640px) {
            .form-container {
                width: 90%;
                padding: 1.5rem;
                border-radius: 0.75rem;
            }

            h1 {
                font-size: 20px;
            }

            h2 {
                font-size: 16px;
            }

            h3 {
                font-size: 14px;
            }

            p, .guardian-info label, .parent-details label, ul {
                font-size: 12px;
            }

            .blank-line, .blank-line-long, .blank-line-textarea {
                width: 100% !important;
                margin: 5px 0;
            }

            .prefilled-text {
                font-size: 12px;
            }

            .guardian-details {
                flex-direction: column;
            }

            .guardian-info, .photo-boxes {
                width: 100%;
            }

            .photo-box, .photo-box-local-guardian {
                height: 120px;
            }

            .photo-row {
                flex-direction: column;
                gap: 10px;
            }

            .photo-box {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="annexure">Annexure- V (C)</div>
        <h1>UNDERTAKING BY PARENT</h1>
        <h2>(FOR HOSTEL RESIDENTS ONLY)</h2>

        <p>
            I/We,
            <span class="blank-line-long">
                <span class="prefilled-text">@Model.ParentName</span>
            </span>
            F/o, M/o,
            <span class="blank-line-long">
                <span class="prefilled-text">@Model.StudentName</span>
            </span>,
            who is studying in Program
            <span class="blank-line">
                <span class="prefilled-text">@Model.Program</span>
            </span>
            Branch
            <span class="blank-line">
                <span class="prefilled-text">@Model.Branch</span>
            </span>
            Year
            <span class="blank-line">
                <span class="prefilled-text">@Model.Year</span>
            </span>
            and residing in Hostel in Room No.
            <span class="blank-line">
                <span class="prefilled-text">@Model.RoomNo</span>
            </span>
            have read and understood the Rules and Regulations and I/We will cooperate with the Hostel Authorities and will also provide all information, if any, of my ward to the Hostel Authorities.
            I will be available on call and take care of my ward, as and when required. The details of Local Guardian/Visitor(s) (if any) are as follow:
        </p>

        <h2>Details of Local Guardian /Visitor(s)</h2>

        <div class="guardian-details">
            <div class="guardian-info">
                <div class="form-row">
                    <label>Name of Local Guardian</label>
                    <span class="blank-line-long">
                        <span class="prefilled-text">@Model.LocalGuardianName</span>
                    </span>
                </div>
                <div class="form-row">
                    <label>Relation with the student</label>
                    <span class="blank-line-long">
                        <span class="prefilled-text">@Model.LocalGuardianRelation</span>
                    </span>
                </div>
                <div class="form-row">
                    <label>Occupation</label>
                    <span class="blank-line-long">
                        <span class="prefilled-text">@Model.LocalGuardianOccupation</span>
                    </span>
                </div>
                <div class="form-row">
                    <label>Permanent Address</label>
                    <span class="blank-line-textarea">
                        <span class="prefilled-text">@Model.LocalGuardianAddress</span>
                    </span>
                </div>
                <div class="form-row">
                    <label>Phone No. (Landline/Mobile)</label>
                    <span class="blank-line-long">
                        <span class="prefilled-text">@Model.LocalGuardianPhone</span>
                    </span>
                </div>
            </div>

            <div class="photo-boxes">
                <div class="photo-row">
                    <div class="photo-box">Photo ID of father self-attested</div>
                    <div class="photo-box">Photo ID of mother self-attested</div>
                </div>
                <div class="photo-box-local-guardian">Photo ID proof of Local Guardian duly attested by Parent</div>
            </div>
        </div>

        <p>
            I hereby undertake that myself and my ward are duly bound to follow the norms of IFHE, Hyderabad, Student Conduct and Discipline Rules, 2018 and Hostel Rules and Regulations 2018 while inside/outside the campus.
        </p>

        <div class="parent-details">
            <div class="form-row">
                <label>Name of Parent</label>
                <span class="blank-line-long">
                    <span class="prefilled-text">@Model.ParentName</span>
                </span>
            </div>
            <div class="form-row">
                <label>Signature</label>
                <span class="blank-line-long"></span>
            </div>
            <div class="form-row">
                <label>Email ID</label>
                <span class="blank-line-long">
                    <span class="prefilled-text">@Model.ParentEmail</span>
                </span>
            </div>
            <div class="form-row">
                <label>Mobile No</label>
                <span class="blank-line-long">
                    <span class="prefilled-text">@Model.ParentMobile</span>
                </span>
            </div>
            <div class="form-row">
                <label>Date</label>
                <span class="blank-line-long">
                    <span class="prefilled-text">@Model.Date</span>
                </span>
            </div>
        </div>

        <h3>Enclose:</h3>
        <ul>
            <li>Two passport size self attested photographs of Father and Mother.</li>
            <li>Two passport size self attested photographs of Local Guardian.</li>
            <li>Xerox copy of photo ID of Local Guardian duly attested by Parent.</li>
        </ul>
    </div>
</body>
</html>