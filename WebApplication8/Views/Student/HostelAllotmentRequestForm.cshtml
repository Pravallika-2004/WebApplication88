@model WebApplication8.Models.Hostel_allot_form
@{
    Layout = null;
    ViewBag.Title = "Student Undertaking Form - University Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', 'Arial', sans-serif;
            background: #ffffff;
            margin: 0;
            padding: 1rem;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .document-wrapper {
            margin-bottom: 2rem;
            page-break-after: always;
        }

        .form-container {
            max-width: 900px;
            width: 100%;
            background: #ffffff;
            padding: 1.5rem;
            border: 1px solid #000000;
            border-radius: 0;
        }

        .header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .header h2 {
            font-size: 1.4rem;
            font-weight: 700;
            color: #000000;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .header p {
            font-size: 0.85rem;
            color: #333333;
            margin-top: 0.25rem;
        }

        .title {
            font-size: 1.2rem;
            font-weight: 600;
            color: #000000;
            text-align: center;
            border-bottom: 2px solid #000000;
            padding-bottom: 0.5rem;
            margin-bottom: 1.5rem;
            position: relative;
        }

        .title::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 50%;
            transform: translateX(-50%);
            width: 40px;
            height: 2px;
            background: #000000;
        }

        .input-field-custom {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #000000;
            border-radius: 0;
            background: #ffffff;
            font-size: 0.9rem;
            color: #000000;
            box-sizing: border-box;
        }

        .input-field-custom:focus {
            outline: none;
            border-color: #000000;
        }

        .multiline-custom {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #000000;
            border-radius: 0;
            background: #ffffff;
            font-size: 0.9rem;
            color: #000000;
            resize: vertical;
            min-height: 3rem;
            box-sizing: border-box;
        }

        .multiline-custom:focus {
            outline: none;
            border-color: #000000;
        }

        .photo-box {
            width: 120px;
            aspect-ratio: 1 / 1;
            border: 1px solid #000000;
            text-align: center;
            padding: 0.5rem;
            font-size: 0.8rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #ffffff;
            margin: 0 auto;
            border-radius: 0;
        }

        .checkbox-custom {
            width: 1.2rem;
            height: 1.2rem;
            border: 1px solid #000000;
            accent-color: #000000;
            border-radius: 0;
        }

        .checkbox-custom:checked {
            background-color: #000000;
            border-color: #000000;
        }

        .submit-btn {
            background: #000000;
            color: #ffffff;
            padding: 0.75rem 1.5rem;
            border-radius: 0;
            font-weight: 600;
            font-size: 0.9rem;
            border: none;
            cursor: pointer;
            display: block;
            margin: 1.5rem auto 0;
        }

        .submit-btn:hover {
            background: #333333;
        }

        .statement {
            font-size: 0.9rem;
            color: #333333;
            text-align: center;
            padding-top: 1rem;
            border-top: 1px solid #000000;
            margin-top: 1rem;
        }

        .signature-line {
            width: 35%;
            border-bottom: 1px solid #000000;
            display: inline-block;
            text-align: center;
            margin: 0 5%;
            vertical-align: middle;
        }

        .office-use {
            font-style: italic;
            color: #333333;
            text-align: center;
            margin-top: 1rem;
            border-top: 1px solid #000000;
            padding-top: 0.75rem;
        }

        .office-fields {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 0.75rem;
            margin-top: 0.75rem;
        }

        .blank-line {
            border-bottom: 1px solid #000000;
            height: 1.5rem;
            display: inline-block;
            vertical-align: middle;
            width: 100%;
            margin: 0.25rem 0;
            background: transparent;
        }

        .table-custom {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

        .table-custom th {
            background: #f5f5f5;
            padding: 0.5rem;
            text-align: left;
            border: 1px solid #000000;
            color: #000000;
            font-size: 0.9rem;
        }

        .table-custom td {
            padding: 0.5rem;
            border: 1px solid #000000;
            color: #000000;
            font-size: 0.9rem;
        }

        @@media print {
            body {
                padding: 0.5cm;
                background: none;
                color: #000000;
            }

            .form-container {
                border: none;
                padding: 0.5cm;
                width: 100%;
                max-width: 19cm; /* Fits A4 width */
            }

            .document-wrapper {
                margin-bottom: 0;
                page-break-after: always;
            }

            .submit-btn {
                display: none; /* Hide submit button in print */
            }

            .input-field-custom, .multiline-custom {
                border: 1px solid #000000;
                background: none;
                color: #000000;
            }

            .photo-box {
                border: 1px solid #000000;
                background: none;
                color: #000000;
            }

            .checkbox-custom {
                border: 1px solid #000000;
                background: none;
            }

            .header h2, .title, .statement, .office-use {
                color: #000000;
            }

            .table-custom th, .table-custom td {
                border: 1px solid #000000;
                background: none;
                color: #000000;
            }

            /* Ensure no elements are cut off */
            * {
                overflow: visible !important;
            }

            /* Remove animations */
            [style*="animation"], [style*="transition"] {
                animation: none !important;
                transition: none !important;
            }
        }

        @@media (max-width: 640px) {
            body {
                padding: 0.5rem;
            }

            .form-container {
                padding: 1rem;
            }

            .header h2 {
                font-size: 1.2rem;
            }

            .title {
                font-size: 1rem;
            }

            .input-field-custom, .multiline-custom {
                width: 100% !important;
                margin: 0.25rem 0;
            }

            .photo-box {
                width: 100px;
            }

            .submit-btn {
                width: 100%;
                font-size: 0.85rem;
            }

            .signature-line {
                width: 45%;
                margin: 0 2.5%;
            }

            .office-fields {
                grid-template-columns: 1fr 1fr;
            }

            .table-custom th, .table-custom td {
                padding: 0.25rem;
                font-size: 0.8rem;
            }
        }
    </style>
</head>
<body>
    <!-- Hostel Allotment Request Form -->
    <div class="document-wrapper">
        <div class="form-container">
            <div class="header">
                <h2>The ICFAI Foundation for Higher Education</h2>
                <p>Donthanapally, Shankerpally Road, Hyderabad - 501203</p>
            </div>
            <h3 class="title">Hostel Allotment Request Form</h3>
            <form class="grid grid-cols-3 gap-4" method="post">
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Admit Card No.</label>
                    <input type="text" class="input-field-custom" value="@Model.AdmitCardNo" required />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Enrolment No.</label>
                    <input type="text" class="input-field-custom" value="@Model.EnrollmentNo" required />
                </div>
                <div class="col-span-1 photo-box">Latest Passport size colour photograph<br>(Paste - DO NOT STAPLE)</div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Student's Name</label>
                    <input type="text" class="input-field-custom" value="@Model.StudentName" required />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Father's Name</label>
                    <input type="text" class="input-field-custom" value="@Model.FatherName" required />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Mother's Name</label>
                    <input type="text" class="input-field-custom" value="@Model.MotherName" required />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Admission Year</label>
                    <input type="text" class="input-field-custom" pattern="\d{4}" placeholder="YYYY" value="@Model.AdmissionYear" required />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Blood Group</label>
                    <input type="text" class="input-field-custom" placeholder="e.g., A+" value="@Model.BloodGroup" required />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">D.O.B.</label>
                    <input type="date" class="input-field-custom"
                           value="@(Model.DateOfBirth.HasValue ? Model.DateOfBirth.Value.ToString("yyyy-MM-dd") : "")"
                           readonly />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Present Residential Address</label>
                    <textarea class="multiline-custom" required>@Model.PresentResidentialAddress</textarea>
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Contact No (Resi/Mobile)</label>
                    <input type="tel" class="input-field-custom" pattern="[0-9]{10}" placeholder="10-digit mobile" value="@Model.ContactNumber" required />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Email Address of Father</label>
                    <input type="email" class="input-field-custom" value="@Model.FatherEmailAddress" required />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Email Address of Mother</label>
                    <input type="email" class="input-field-custom" value="@Model.MotherEmailAddress" required />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Email Address Student</label>
                    <input type="email" class="input-field-custom" value="@Model.StudentEmailAddress" required />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Name of Local Guardian</label>
                    <input type="text" class="input-field-custom" value="@Model.LocalGuardianName" required />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Local Guardian's Residential Address (Hyderabad)</label>
                    <textarea class="multiline-custom" required>@Model.LocalGuardianAddress</textarea>
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Contact No (Resi/Mobile)</label>
                    <input type="tel" class="input-field-custom" pattern="[0-9]{10}" placeholder="10-digit mobile" value="@Model.LocalGuardianContactNumber" required />
                </div>
                <div class="col-span-1">
                    <label class="block font-medium text-sm text-gray-700 mb-1">Email Address of Guardian</label>
                    <input type="email" class="input-field-custom" value="@Model.LocalGuardianEmailAddress" required />
                </div>
                <p class="col-span-3 statement">WE HEREBY STATE THAT ALL THE ABOVE INFORMATION IS TRUE TO THE BEST OF OUR KNOWLEDGE</p>
                <div class="col-span-3 flex justify-between mt-4">
                    <span class="signature-line">SIGNATURE OF STUDENT</span>
                    <span class="signature-line">SIGNATURE OF PARENT/GUARDIAN</span>
                </div>
                <div class="col-span-3 office-use">For Office Use Only</div>
                <div class="col-span-3 office-fields">
                    <div>
                        <label class="block font-medium text-sm text-gray-700 mb-1">Room No:</label>
                        <span class="blank-line"></span>
                    </div>
                    <div>
                        <label class="block font-medium text-sm text-gray-700 mb-1">Block</label>
                        <span class="blank-line"></span>
                    </div>
                    <div>
                        <label class="block font-medium text-sm text-gray-700 mb-1">Key No.</label>
                        <span class="blank-line"></span>
                    </div>
                    <div>
                        <label class="block font-medium text-sm text-gray-700 mb-1">Mess</label>
                        <span class="blank-line"></span>
                    </div>
                    <div>
                        <label class="block font-medium text-sm text-gray-700 mb-1">Date of Allotment</label>
                        <span class="blank-line"></span>
                    </div>
                    <div>
                        <label class="block font-medium text-sm text-gray-700 mb-1">Alloted by</label>
                        <span class="blank-line"></span>
                    </div>
                    <div>
                        <label class="block font-medium text-sm text-gray-700 mb-1">(name)</label>
                        <span class="blank-line"></span>
                    </div>
                    <div>
                        <label class="block font-medium text-sm text-gray-700 mb-1">(Signature)</label>
                        <span class="blank-line"></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Undertaking and Checklist -->
    <div class="document-wrapper">
        <div class="form-container">
            <div class="header">
                <h3 class="title">Undertaking (To Be Signed By The Student)</h3>
            </div>
            <form asp-action="SubmitUndertakingChecklist" method="post">
                <ol class="list-decimal pl-6 mb-4 text-sm text-gray-700 space-y-2">
                    <li>I have read all the rules and regulations of the hostel and shall abide by them in letter and spirit. I shall also abide by the rules as modified or framed in future from time to time.</li>
                    <li>I shall never indulge myself directly or indirectly in future in any type of Ragging activity.</li>
                    <li>I shall not get involved in any Union/Group/Forum formation in Hostel/University to challenge the authority.</li>
                    <li>I shall not involve in any confrontation/fight/quarrel/discipline activity in the hostel and the university.</li>
                    <li>I shall pay the Accommodation charges, Mess bills and other charges as per the specified dates. If I fail to do so, I will abide by the rules and regulations about penalty.</li>
                    <li>I shall follow all the directions given from time to time by the hostel authority during my stay in hostel.</li>
                    <li>This undertaking abides me for my entire stay in Hostel.</li>
                    <li>I understand that the decision of the Hostel administration in any of the above matter/issues will be binding on me and shall fully respect the same.</li>
                    <li>I shall not bring or co-operate with others in bringing the banned substances as well as items like cigar, alcohol etc., inside the campus.</li>
                </ol>
                <div class="flex justify-between mb-4 flex-wrap gap-4">
                    <div class="w-full sm:w-5/12">
                        <p class="mb-2"><span class="font-medium text-sm text-gray-700">Date:</span> <input type="date" name="date" class="input-field-custom" required></p>
                        <p class="mb-2"><span class="font-medium text-sm text-gray-700">Place:</span> <input type="text" name="place" class="input-field-custom" placeholder="City" required></p>
                    </div>
                    <div class="w-full sm:w-5/12">
                        <p class="mb-2"><span class="font-medium text-sm text-gray-700">Name of the Student:</span> <input type="text" name="student_name" class="input-field-custom" value="@Model.StudentName" required></p>
                        <p class="mb-2"><span class="font-medium text-sm text-gray-700">Student Mobile Number:</span> <input type="tel" name="student_mobile" class="input-field-custom" pattern="[0-9]{10}" placeholder="10-digit mobile" value="@Model.ContactNumber" required></p>
                        <p class="mb-2"><span class="font-medium text-sm text-gray-700">Signature:</span> <input type="text" name="signature" class="input-field-custom" required></p>
                    </div>
                </div>
                <div>
                    <h4 class="text-md font-semibold text-black mb-3">Checklist for Hostel Room Allotment</h4>
                    <div class="overflow-x-auto">
                        <table class="table-custom">
                            <thead>
                                <tr>
                                    <th class="border p-2 text-sm font-semibold text-gray-700">S No</th>
                                    <th class="border p-2 text-sm font-semibold text-gray-700">Particulars</th>
                                    <th class="border p-2 text-sm font-semibold text-gray-700 text-center">Tick</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="border p-2 text-sm text-gray-700">1</td>
                                    <td class="border p-2 text-sm text-gray-700">Duly filled in and signed hostel allotment request form</td>
                                    <td class="border p-2 text-center"><input type="checkbox" name="checklist_1" class="checkbox-custom"></td>
                                </tr>
                                <tr>
                                    <td class="border p-2 text-sm text-gray-700">2</td>
                                    <td class="border p-2 text-sm text-gray-700">Annexure IV - IFHE Hostel Rules & Regulations 2018</td>
                                    <td class="border p-2 text-center"><input type="checkbox" name="checklist_2" class="checkbox-custom"></td>
                                </tr>
                                <tr>
                                    <td class="border p-2 text-sm text-gray-700">3</td>
                                    <td class="border p-2 text-sm text-gray-700">Annexure IVA - Undertaking of the Parent</td>
                                    <td class="border p-2 text-center"><input type="checkbox" name="checklist_3" class="checkbox-custom"></td>
                                </tr>
                                <tr>
                                    <td class="border p-2 text-sm text-gray-700">4</td>
                                    <td class="border p-2 text-sm text-gray-700">Annexure IVB - Undertaking by Parent/Guardian</td>
                                    <td class="border p-2 text-center"><input type="checkbox" name="checklist_4" class="checkbox-custom"></td>
                                </tr>
                                <tr>
                                    <td class="border p-2 text-sm text-gray-700">5</td>
                                    <td class="border p-2 text-sm text-gray-700">Annexure IVC - Undertaking by Parent (For Hostel Residents only)</td>
                                    <td class="border p-2 text-center"><input type="checkbox" name="checklist_5" class="checkbox-custom"></td>
                                </tr>
                                <tr>
                                    <td class="border p-2 text-sm text-gray-700">6</td>
                                    <td class="border p-2 text-sm text-gray-700">Annexure IVD - Undertaking by Student</td>
                                    <td class="border p-2 text-center"><input type="checkbox" name="checklist_6" class="checkbox-custom"></td>
                                </tr>
                                <tr>
                                    <td class="border p-2 text-sm text-gray-700">7</td>
                                    <td class="border p-2 text-sm text-gray-700">1 passport size self attested photograph of Mother</td>
                                    <td class="border p-2 text-center"><input type="checkbox" name="checklist_7" class="checkbox-custom"></td>
                                </tr>
                                <tr>
                                    <td class="border p-2 text-sm text-gray-700">8</td>
                                    <td class="border p-2 text-sm text-gray-700">1 passport size self attested photograph of Father</td>
                                    <td class="border p-2 text-center"><input type="checkbox" name="checklist_8" class="checkbox-custom"></td>
                                </tr>
                                <tr>
                                    <td class="border p-2 text-sm text-gray-700">9</td>
                                    <td class="border p-2 text-sm text-gray-700">1 passport size self attested photograph of local guardian</td>
                                    <td class="border p-2 text-center"><input type="checkbox" name="checklist_9" class="checkbox-custom"></td>
                                </tr>
                                <tr>
                                    <td class="border p-2 text-sm text-gray-700">10</td>
                                    <td class="border p-2 text-sm text-gray-700">1 copy of photo ID of local guardian attested by Parent</td>
                                    <td class="border p-2 text-center"><input type="checkbox" name="checklist_10" class="checkbox-custom"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>