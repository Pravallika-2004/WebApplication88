@model WebApplication8.Models.Healthhistoryform
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IFHE Hostel Rules & Regulations 2018</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        .container {
            display: flex;
            max-width: 1200px;
            margin: 20px auto;
        }

        .sidebar {
            width: 250px;
            background-color: #1a3c6c;
            color: white;
            padding: 20px;
            position: sticky;
            top: 20px;
            height: fit-content;
        }

            .sidebar h2 {
                font-size: 1.2em;
                margin-bottom: 20px;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    margin: 10px 0;
                }

                    .sidebar ul li a {
                        color: white;
                        text-decoration: none;
                        font-size: 1em;
                    }

                        .sidebar ul li a:hover {
                            text-decoration: underline;
                        }

        .content {
            flex: 1;
            background: white;
            padding: 30px;
            margin-left: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

            .content h1 {
                font-size: 1.8em;
                color: #1a3c6c;
                margin-bottom: 20px;
            }

        .accordion {
            margin-bottom: 20px;
        }

        .accordion-header {
            background-color: #e0e7ff;
            padding: 15px;
            cursor: pointer;
            font-weight: bold;
            border-radius: 5px;
            margin-bottom: 5px;
        }

            .accordion-header:hover {
                background-color: #d1d9ff;
            }

        .accordion-content {
            display: none;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

            .accordion-content.active {
                display: block;
            }

            .accordion-content ol {
                padding-left: 20px;
            }

        .download-link {
            display: inline-block;
            margin: 20px 0;
            padding: 10px 20px;
            background-color: #1a3c6c;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

        .signature-form {
            margin-top: 30px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
        }

            .signature-form label {
                display: block;
                margin: 10px 0 5px;
                font-weight: bold;
            }

            .signature-form input, .signature-form select {
                width: 100%;
                padding: 8px;
                margin-bottom: 15px;
                border: 1px solid #ddd;
                border-radius: 5px;
            }

            .signature-form button {
                padding: 10px 20px;
                background-color: #1a3c6c;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

                .signature-form button:hover {
                    background-color: #15315a;
                }

        @@media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
                position: static;
            }

            .content {
                margin-left: 0;
                margin-top: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <h2>Sections</h2>
            <ul>
                <li><a href="#general">General</a></li>
                <li><a href="#lodging">Lodging</a></li>
                <li><a href="#discipline">Discipline</a></li>
                <li><a href="#signature">Acknowledgment</a></li>
            </ul>
        </div>
        <div class="content">
            <h1>IFHE Hostel Rules & Regulations 2018</h1>
            <p>The ICFAI Foundation for Higher Education (IFHE), Hyderabad</p>

            <div class="accordion">
                <div class="accordion-header" id="general">General</div>
                <div class="accordion-content">
                    <ol>
                        <li>These rules provide a safe and conducive environment for students residing in IFHE hostels.</li>
                        <li>The Hostel Warden/Asst. Warden enforces these rules and manages hostel admissions.</li>
                        <li>The Warden may break open rooms for violations, suspected unlawful activities, or security risks.</li>
                        <li>Expelled students must vacate the hostel immediately after clearing dues.</li>
                        <li>The campus is pedestrian-only; motor vehicles are not permitted.</li>
                        <li>Students with chronic medical issues may be asked to vacate for personal medical care.</li>
                        <li>Continuation of stay is at the University’s discretion.</li>
                        <li>Day scholars need written permission to enter hostels.</li>
                    </ol>
                </div>
            </div>

            <div class="accordion">
                <div class="accordion-header" id="lodging">Lodging</div>
                <div class="accordion-content">
                    <ol>
                        <li>Rooms are allotted by SSD/Warden/Assistant Warden.</li>
                        <li>Hostel and mess fees must be paid at semester registration.</li>
                        <li>Room changes require Warden’s permission; personal locks are prohibited.</li>
                        <li>The University may shift students for administrative reasons.</li>
                        <li>Students are responsible for hostel furniture and fixtures.</li>
                        <li>Damaging property is punishable; costs are recovered from responsible parties.</li>
                        <li>Leave requires written permission and parental notification.</li>
                        <li>Conserve water and report leaks immediately.</li>
                        <li>Cooking in rooms is not allowed.</li>
                        <li>Meals must be taken in the assigned mess during prescribed timings.</li>
                        <li>Mess refunds are available for approved leaves over 48 hours.</li>
                        <li>Switchregister electricity by switching off fans, lights, etc.</li>
                        <li>Unauthorized electrical equipment will be confiscated.</li>
                        <li>Partying in rooms is prohibited; use designated party areas.</li>
                        <li>Do not keep large cash or valuables; IFHE is not responsible for losses.</li>
                        <li>Parents/Guardians meet students in the waiting hall with permission.</li>
                        <li>Anti-national or anti-social activities are prohibited.</li>
                    </ol>
                </div>
            </div>

            <div class="accordion">
                <div class="accordion-header" id="discipline">Discipline</div>
                <div class="accordion-content">
                    <ol>
                        <li>Avoid conflicts with staff; lodge complaints in writing.</li>
                        <li>Do not tip hostel/mess/security staff.</li>
                        <li>Donations are prohibited.</li>
                        <li>Notices or meetings require Warden’s permission.</li>
                        <li>The campus is a no-smoking zone.</li>
                        <li>Tobacco, alcohol, and drugs are serious misconduct.</li>
                        <li>Gambling is prohibited.</li>
                        <li>Rooms are subject to inspection for unauthorized items.</li>
                        <li>Carry and present ID cards; forged IDs lead to disciplinary action.</li>
                        <li>Swipe ID cards and register biometrics at the main gate.</li>
                        <li>Overnight stays require parental permission.</li>
                        <li>Campus gates close at 2100 hrs; late entry requires explanation.</li>
                        <li>Males and females cannot enter each other’s hostels.</li>
                        <li>Maintain silence in hostel premises.</li>
                        <li>Ragging is strictly prohibited.</li>
                        <li>Report issues or roommate problems to the Warden.</li>
                        <li>Misconduct may lead to expulsion.</li>
                        <li>Update contact details with the University.</li>
                        <li>Rules may change without notice.</li>
                    </ol>
                </div>
            </div>

            <a href="005_Hostel_Rules_2018.pdf" class="download-link">Download PDF</a>

            <div class="signature-form" id="signature">
                <h2>Acknowledgment</h2>
                <p>I accept the above rules & regulations and confirm to abide by the same.</p>
                <form>
                    <label for="parent-signature">Parent Signature</label>
                    <input type="text" id="parent-signature" name="parent-signature" required>
                    <label for="student-signature">Student Signature</label>
                    <input type="text" id="student-signature" name="student-signature" required>
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" required>
                    <label for="program">Program</label>
                    <input type="text" id="program" name="program" required>
                    <label for="app-number">Application No.</label>
                    <input type="text" id="app-number" name="app-number" required>
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Accordion functionality
        const headers = document.querySelectorAll('.accordion-header');
        headers.forEach(header => {
            header.addEventListener('click', () => {
                const content = header.nextElementSibling;
                const isActive = content.classList.contains('active');
                document.querySelectorAll('.accordion-content').forEach(c => c.classList.remove('active'));
                if (!isActive) {
                    content.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>