@model WebApplication8.Models.WelcomeLetterForm
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome Letter - IBS Hyderabad</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Times New Roman', Times, serif;
            line-height: 1.6;
            background-color: #f8f9fa;
            font-size: 14pt;
            margin: 0;
        }

        .container {
            max-width: 950px;
            margin: 20px auto;
            padding: 20px;
            background-color: transparent;
        }

        h1, h2, h3, h4 {
            color: #000;
            margin-bottom: 10px;
        }

        h1 { font-size: 18pt; font-weight: bold; }
        h2 { font-size: 16pt; font-weight: bold; }
        h3 { font-size: 14pt; font-weight: bold; }
        h4 { font-size: 14pt; font-weight: bold; }

        .letter-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .table-responsive {
            margin-top: 15px;
        }

        .table {
            font-size: 12pt;
            border-collapse: collapse;
            width: 100%;
        }

        .table th, .table td {
            border: 1px solid #000;
            padding: 8px;
            text-align: left;
        }

        .list-group-item {
            border: none;
            padding: 4px 0;
            font-size: 14pt;
        }

        .section-title {
            margin-top: 20px;
            padding-bottom: 8px;
        }

        .hotel-info {
            margin-top: 15px;
            font-size: 14pt;
        }

        .flowchart {
            text-align: center;
            margin-top: 15px;
        }

        .flow-box {
            padding: 8px 15px;
            margin: 8px;
            border: 2px solid #000;
            border-radius: 5px;
            display: inline-block;
            background-color: #fff;
            font-size: 12pt;
            text-shadow: 0 0 1px rgba(0,0,0,0.3);
        }

        .flow-decision {
            border-color: #155724;
            background-color: #d4edda;
            padding: 8px 15px;
            min-width: 60px;
            text-shadow: 0 0 1px rgba(0,0,0,0.3);
        }

        .flow-process {
            border-color: #721c24;
            background-color: #f8d7da;
            padding: 8px 15px;
            text-shadow: 0 0 1px rgba(0,0,0,0.3);
        }

        .flow-arrow {
            margin: 0 6px;
            font-size: 16pt;
        }

        .flow-vertical-arrow {
            display: block;
            text-align: center;
            font-size: 16pt;
        }

        .flow-branches {
            display: flex;
            justify-content: space-between;
            width: 450px;
            margin: 0 auto;
        }

        p, ul {
            margin-bottom: 10px;
        }

        ul {
            list-style-type: disc;
            padding-left: 25px;
        }

        ul ul {
            list-style-type: circle;
            padding-left: 25px;
        }

        a {
            color: #000;
            text-decoration: underline;
        }

        @@media print {
            body {
                font-family: 'Times New Roman', Times, serif;
                font-size: 12pt;
                margin: 0;
                line-height: 1.5;
                color: #000;
            }

            .container {
                margin: 0;
                padding: 15px;
                background-color: transparent;
                width: 100%;
            }

            h1 { font-size: 16pt; }
            h2 { font-size: 14pt; }
            h3 { font-size: 12pt; }
            h4 { font-size: 12pt; }

            .table {
                font-size: 10pt;
            }

            .table th, .table td {
                padding: 6px;
                border: 1px solid #000;
            }

            .list-group-item, .hotel-info {
                font-size: 12pt;
            }

            .flow-box {
                font-size: 10pt;
                padding: 6px 12px;
            }

            .flow-decision, .flow-process {
                padding: 6px 12px;
            }

            .flow-arrow, .flow-vertical-arrow {
                font-size: 14pt;
            }

            .flow-branches {
                width: 400px;
            }

            .page-break-before {
                page-break-before: always;
            }

            .page-break-after {
                page-break-after: always;
            }

            .welcome-letter, .flowchart-section, .academic-registration, .hostel-induction, .general-instructions {
                min-height: 9.5in;
                max-height: 9.5in;
                overflow: hidden;
            }

            .flowchart-section {
                display: flex;
                flex-direction: column;
                justify-content: center;
            }

            @@page {
                size: A4;
                margin: 15mm;
            }

            /* Ensure elements don't break awkwardly */
            .table, .flow-box, .list-group-item {
                page-break-inside: avoid;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Page 1: Welcome Message -->
        <div class="welcome-letter">
            <div class="letter-header">
                <h1>Draft Welcome Letter</h1>
            </div>
            <p>Dear @Model.StudentName,</p>
            <p><strong>Sub: ICFAI Business School Hyderabad Welcomes MBA Batch 2023-25</strong></p>
            <p>A warm welcome to ICFAI Business School Hyderabad.</p>
            <p>Congratulations on your securing admission to the Two-year Full-Time Residential Program in Master’s in Business Administration (MBA) Batch of 2023-25 at ICFAI Business School (IBS) – Hyderabad.</p>
            <p>We are delighted to welcome and enroll you to our vibrant community of learners, and hopeful to see you transform into thought leaders. We believe that our world-class faculty, innovative curriculum, and state-of-the-art facilities will provide you with an unparalleled learning experience. We are committed to provide you an education that prepares you to meet the demands of the business world, and we are confident that you will find our program stimulating, rewarding, and fulfilling.</p>
            <p>Our state-of-the-art facilities are equipped with cutting-edge technology, and our faculty is well-versed in utilizing digital tools to deliver content in innovative and engaging ways. However, we also understand the value of human interaction and strive to blend technology judiciously with human intervention wherever required. Our goal is to provide you with a learning experience that is both high-tech and high-touch, enabling you to develop the skills and competencies needed to succeed in today's dynamic business landscape.</p>
            <p>As you settle in, we encourage you to take advantage of the numerous resources and opportunities available to you on campus. From networking events to career counseling services, we are here to support you at every step. We also expect you to make countless memories while you’re on campus. By counting the time in minutes, we encourage you to making the most of it. We expect you to eat healthy, stay peaceful and think better.</p>
            <p>Once again, welcome to ICFAI Business School, Hyderabad. We look forward to meeting you, and we wish you all the best as you embark on this exciting journey.</p>
            <p>Prof. K S Venugopal Rao<br>Director, IBS Hyderabad</p>
        </div>
        <div class="page-break-after"></div>

        <!-- Page 2: Registration Process and Flowchart -->
        <div class="flowchart-section">
            <h2 class="section-title">MBA CLASS OF 2025</h2>
            <h3>REGISTRATION PROCESS</h3>
            <p>Dear @Model.StudentName,</p>
            <p>This is in continuation of the Enrollment Letter already received by you. The process of registration is as follows:</p>
            <h4>1. Academic Registration</h4>
            <p>The Academic Registration is scheduled for 15th May, 2023 between 10:00 AM to 5:00 PM in Lecture Theaters (LT) in the following order:</p>
            <h4>Registration Process Flowchart</h4>
            <div class="flowchart">
                <div class="flow-box">Registration Process</div>
                <div class="flow-arrow">↓</div>
                <div class="flow-box">Checking of Fee Payment Status at "Ady I help you" Counter / Main Gate</div>
                <div class="flow-arrow">↓</div>
                <div class="flow-box flow-decision">Fees Fully Paid?</div>
                <div class="flow-arrow">↓</div>
                <div class="flow-branches">
                    <div>
                        <div class="flow-box flow-process">YES</div>
                        <div class="flow-vertical-arrow">↓</div>
                        <div class="flow-box flow-process">Proceed to Collect Hostel Room Keys from designated counters</div>
                        <div class="flow-vertical-arrow">↓</div>
                        <div class="flow-box flow-process">Proceed to Academic Registration (10 AM to 5 PM, 15th May 2023)</div>
                        <div class="flow-vertical-arrow">↓</div>
                        <div class="flow-box">Induction sessions from 16th to 30th May 2023</div>
                    </div>
                    <div>
                        <div class="flow-box flow-process">NO</div>
                        <div class="flow-vertical-arrow">↓</div>
                        <div class="flow-box flow-process">Proceed to Accounts Counter for Clearance</div>
                        <div class="flow-vertical-arrow">↓</div>
                        <div class="flow-box flow-process">Proceed to Collect Hostel Room Keys from designated counters</div>
                        <div class="flow-vertical-arrow">↓</div>
                        <div class="flow-box flow-process">Proceed to Academic Registration (10 AM to 5 PM, 15th May 2023)</div>
                        <div class="flow-vertical-arrow">↓</div>
                        <div class="flow-box">Induction sessions from 16th to 30th May 2023</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="page-break-after"></div>

        <!-- Page 3: Academic Registration Details (Table and Initial Details) -->
        <div class="academic-registration">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>LT</th>
                            <th>Enrollment Number Range</th>
                            <th>LT</th>
                            <th>Enrollment Number Range</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>LT-A</td>
                            <td>23BSPHH01C0001 - 23BSPHH01C0165</td>
                            <td>LT-F</td>
                            <td>23BSPHH01C0826 - 23BSPHH01C0990</td>
                        </tr>
                        <tr>
                            <td>LT-B</td>
                            <td>23BSPHH01C0166 - 23BSPHH01C0330</td>
                            <td>LT-G</td>
                            <td>23BSPHH01C0991 - 23BSPHH01C1155</td>
                        </tr>
                        <tr>
                            <td>LT-C</td>
                            <td>23BSPHH01C0331 - 23BSPHH01C0495</td>
                            <td>LT-H</td>
                            <td>23BSPHH01C1156 - 23BSPHH01C1320</td>
                        </tr>
                        <tr>
                            <td>LT-D</td>
                            <td>23BSPHH01C0496 - 23BSPHH01C0660</td>
                            <td>LT-I</td>
                            <td>23BSPHH01C1321 - 23BSPHH01C1485</td>
                        </tr>
                        <tr>
                            <td>LT-E</td>
                            <td>23BSPHH01C0661 - 23BSPHH01C0825</td>
                            <td>LT-J</td>
                            <td>23BSPHH01C1486 - 23BSPHH01C1688</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <p><em>Physical presence of the student is mandatory for the registration process.</em></p>
            <p><strong>Academic Registration consists of:</strong></p>
            <ul class="list-group">
                <li class="list-group-item">Verification of Academic credentials:</li>
                <li class="list-group-item">Biometrics / Thumb Impression of the student.</li>
            </ul>
            <p>Students are also required to carry the Original Certificates for verification. The same will be returned upon verification immediately (Please ensure to collect your original documents immediately after verification of your credentials).</p>
        </div>
        <div class="page-break-after"></div>

        <!-- Page 4: Academic Registration (Document Upload), Hostel and Mess Registration, Induction -->
        <div class="hostel-induction">
            <p><strong>Students are required TO UPLOAD the following documents on the Student Information System (SIS) portal. (Detailed guidelines on SIS access is attached for your reference). Students are required to carry the following duly filled documents for Academic Registration and submit them at the Academic Registration Desk:</strong></p>
            <ul class="list-group">
                <li class="list-group-item">Copy of the Enrollment Letter</li>
                <li class="list-group-item">Recent Passport Size Photograph (2 Nos.) in formals preferably</li>
                <li class="list-group-item">Copy of X Certificate</li>
                <li class="list-group-item">Copy of XII Certificate</li>
                <li class="list-group-item">Copy of UG/Degree semester-wise mark sheets/consolidated mark sheets with CGPA to percentage calculation sheet – Annexure II along with CGPA to Percentage Calculation sheet as the University Guidelines.</li>
                <li class="list-group-item">Copy of Transfer Certificate</li>
                <li class="list-group-item">Duly filled Graduation Percentage Calculation Sheet (students whose results are still awaited, may mention “RA (Results Awaited)” in the respective year-wise column)</li>
                <li class="list-group-item">Email Acknowledgement copy of Anti-ragging Form / Proof of submitting Anti-ragging Form</li>
                <li class="list-group-item">Anti-ragging acknowledgement receipt. (Guidelines on filling anti-ragging form is attached)</li>
            </ul>
            <h4>2. Hostel and Mess Registration</h4>
            <ul class="list-group">
                <li class="list-group-item">Verification and submission of Hostel-related documents</li>
                <li class="list-group-item">Allotment of Hostel room & issue of Mess Card.</li>
            </ul>
            <p>Students who have paid the 1st semester program fees and hostel fees are allowed to register for hostel accommodation on 14th May 2023 from 9:30 am to 5 pm.</p>
            <p><strong>Students are required TO UPLOAD the following documents on the Student Information System (SIS) portal. Also, students are required to carry the following duly filled documents for Hostel Registration:</strong></p>
            <ul class="list-group">
                <li class="list-group-item">Student Call Letter</li>
                <li class="list-group-item">Hostel Allotment Form</li>
                <li class="list-group-item">Health Record (Annex III)</li>
                <li class="list-group-item">MBA Student Personal Data (Annex IV)</li>
                <li class="list-group-item">Hostel Rules & Regulations (Annex V)</li>
                <li class="list-group-item">Undertaking of The Parent/Guardian (Annex-V A)</li>
                <li class="list-group-item">Undertaking by Parent/Guardian (Annex-V B)</li>
                <li class="list-group-item">Undertaking by Parent (Annex-V C)</li>
                <li class="list-group-item">Undertaking by Parent/Guardian (Annex-V D)</li>
                <li class="list-group-item">Undertaking by Student (Annex-V F)</li>
            </ul>
            <h4>3. Induction Sessions</h4>
            <p>The Induction session will be conducted from 16th May to 30th May, 2023. A handbook will be provided on the day of the registration</p>
        </div>
        <div class="page-break-after"></div>

        <!-- Page 5: General Instructions and Dress Code -->
        <div class="general-instructions">
            <h3 class="section-title">General Instructions:</h3>
            <ul class="list-group">
                <li class="list-group-item">Parents will not be allowed to stay in the Campus. Parents are required to make necessary stay arrangements during their stay in Hyderabad.</li>
                <li class="list-group-item">Parents will not be allowed entry into the hostel premises during the registration days.</li>
                <li class="list-group-item">Parents who are willing to stay in a Hotel nearby, may refer the details of Hotels below, which are within the range of 2-5kms from the IBS Hyderabad Campus.</li>
            </ul>
            <div class="hotel-info">
                <p>
                    1. S-Grand Inn<br>
                    Survey no 196, Subishi’s Town Centre, 3rd Floor, Mokila, Shankarpally Mandal, RR Dist, Hyderabad – 501203<br>
                    Tel: 96529 05140 / 98481 21778 / 99517 09909 / 79894 00696<br>
                    Email: <a href="mailto:info@sgrandinn.com">info@sgrandinn.com</a>; Website: <a href="http://www.sgrandinn.com/contact.html">http://www.sgrandinn.com/contact.html</a>
                </p>
                <p>
                    2. Oyo Rooms D’Jade<br>
                    Near Khanapur, Shankarpally Road (enroute the campus), 317 PYR Complex, Near ICFAI Campus, Miyakhan Gadda, Shankarpalli Rd., Hyderabad, Telangana-500075<br>
                    Tel: 0124 620 1614
                </p>
            </div>
            <h3 class="section-title">Dress Code:</h3>
            <p>Dressing for Induction sessions, Regular Classes & Academic Premises: Students are advised to dress decently in the Academic Area/ Premises. Boys are advised to wear Trousers with full/half Sleeves Shirts and Girls are advised to wear Trousers & Shirt or Indian Formals.</p>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>