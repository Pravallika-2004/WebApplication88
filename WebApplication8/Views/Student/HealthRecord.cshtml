@model WebApplication8.Models.Healthhistoryform
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Health Record - IBS ICFAI Business School</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', 'Arial', sans-serif;
            background: #ffffff;
            margin: 0;
            padding: 1rem;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .form-container {
            max-width: 900px;
            width: 100%;
            background: #ffffff;
            padding: 1.5rem;
            border: 1px solid #000000;
            overflow: visible;
            position: relative;
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .header {
            text-align: center;
            flex: 1;
        }

        .header h2 {
            font-size: 1.4rem;
            font-weight: 700;
            color: #000000;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .header h3 {
            font-size: 1.2rem;
            font-weight: 600;
            color: #000000;
            text-transform: uppercase;
            margin-top: 0.5rem;
        }

        .annexure {
            font-size: 0.95rem;
            font-weight: 600;
            color: #000000;
        }

        .title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #000000;
            border-bottom: 2px solid #000000;
            padding-bottom: 0.25rem;
            margin: 1.5rem 0 1rem;
        }

        .grid-form {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .label {
            font-weight: 600;
            font-size: 0.9rem;
            color: #000000;
            margin-right: 0.5rem;
        }

        .value {
            font-size: 0.9rem;
            color: #000000;
            border-bottom: 1px solid #000000;
            display: inline-block;
            width: 60%;
            text-align: center;
            min-height: 1.5rem;
            vertical-align: middle;
        }

        .signature-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
            margin-top: 1.5rem;
            margin-bottom: 1rem;
        }

        .signature-value {
            font-size: 0.9rem;
            color: #000000;
            border-bottom: 1px solid #000000;
            display: inline-block;
            width: 80%;
            text-align: center;
            min-height: 1.5rem;
            vertical-align: middle;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .checkbox-custom {
            width: 1rem;
            height: 1rem;
            border: 1px solid #000000;
            accent-color: #000000;
            border-radius: 0;
        }

        .checkbox-label {
            font-size: 0.9rem;
            color: #000000;
        }

        .history-row {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 0.25rem;
        }

        .history-item {
            font-size: 0.9rem;
            color: #000000;
            position: relative;
            padding-left: 1.5rem;
        }

        .history-item::before {
            content: '...';
            position: absolute;
            left: 0;
            color: #000000;
        }

        .details-text {
            font-size: 0.9rem;
            color: #000000;
            margin-top: 0.5rem;
        }

        @@media print {
            body {
                padding: 0.5cm;
                background: none;
                color: #000000;
            }

            .form-container {
                border: none;
                padding: 0.5cm;
                width: 100%;
                max-width: 19cm; /* Fits A4 width */
            }

            .checkbox-custom {
                border: 1px solid #000000;
                background: none;
            }

            .header h2, .header h3, .title, .label, .value, .checkbox-label, .history-item, .details-text, .annexure {
                color: #000000;
            }

            /* Ensure no elements are cut off */
            * {
                overflow: visible !important;
            }

            /* Remove animations and transitions */
            [style*="animation"], [style*="transition"] {
                animation: none !important;
                transition: none !important;
            }
        }

        @@media (max-width: 640px) {
            body {
                padding: 0.5rem;
            }

            .form-container {
                padding: 1rem;
            }

            .grid-form {
                grid-template-columns: 1fr;
            }

            .signature-grid {
                grid-template-columns: 1fr;
            }

            .value, .signature-value {
                width: 50%;
            }

            .header h2 {
                font-size: 1.2rem;
            }

            .header h3 {
                font-size: 1rem;
            }

            .header-container {
                flex-direction: column;
                align-items: center;
                gap: 0.5rem;
            }

            .annexure {
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="header-container">
            <div class="header">
                <h2>IBS - ICFAI Business School</h2>
                <h3>Health Record</h3>
            </div>
            <div class="annexure">Annexure-III</div>
        </div>

        <div class="grid-form">
            <div><span class="label">Name:</span><span class="value">@Model.StudentName</span></div>
            <div><span class="label">Enrollment No.:</span><span class="value">@Model.EnrollmentNo</span></div>
            <div><span class="label">Room No:</span><span class="value">@Model.RoomNo</span></div>
            <div><span class="label">Mobile No:</span><span class="value">@Model.StudentContactNo</span></div>
            <div><span class="label">Age:</span><span class="value">@Model.Age</span></div>
            <div>
                <span class="label">Gender:</span>
                <span class="checkbox-group">
                    <input type="checkbox" class="checkbox-custom" @(Model.Gender == "Male" ? "checked" : "") disabled>
                    <span class="checkbox-label">Male</span>
                    <input type="checkbox" class="checkbox-custom" @(Model.Gender == "Female" ? "checked" : "") disabled>
                    <span class="checkbox-label">Female</span>
                </span>
            </div>
            <div><span class="label">Height:</span><span class="value">@Model.Height</span></div>
            <div><span class="label">Weight:</span><span class="value">@Model.Weight</span></div>
            <div><span class="label">Blood Group:</span><span class="value">@Model.BloodGroup</span></div>
        </div>

        <h4 class="title">Past History:</h4>
        @if (!string.IsNullOrEmpty(Model.Past_Health_History))
        {
            var histories = Model.Past_Health_History.Split(new[] { ',' }, StringSplitOptions.RemoveEmptyEntries).Select(h => h.Trim()).ToList();
            for (int i = 0; i < histories.Count; i += 4)
            {
                <div class="history-row">
                    @for (int j = i; j < i + 4 && j < histories.Count; j++)
                    {
                        <span class="history-item">@histories[j]</span>
                    }
                </div>
            }
        }

        <p><span class="label">Details:</span></p>
        <p class="details-text">@Model.Details_Of_Past_Health_History</p>

        <h4 class="title">History of Allergies:</h4>
        <p><span class="label">Substance Allergy:</span></p>
        <p class="details-text">@Model.History_Of_sub_Allergies</p>

        <p><span class="label">Drug Allergy:</span></p>
        <p class="details-text">@Model.History_Of_drug_Allergies</p>

        <div class="signature-grid">
            <div><span class="label">Date:</span> <span>@DateTime.Now.ToString("dd/MM/yyyy")</span></div>
            <div><span class="label">Signature of Parent:</span> <span class="signature-value"></span></div>
            <div><span class="label">Signature of Student:</span> <span class="signature-value"></span></div>
        </div>
    </div>
</body>
</html>